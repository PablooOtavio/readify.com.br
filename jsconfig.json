{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"],
      "@/*": ["./src/*"]
    },
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "jsx": "react-jsx",
    "strict": false,
    "allowJs": true
  },
  "exclude": ["node_modules", ".next", "out"],
  "include": ["src/**/*"]
}
